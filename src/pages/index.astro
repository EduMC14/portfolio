<style>
  .writing-mode-v-rl {
    writing-mode: vertical-rl
}

  .w-section {
    width: 82.9%;
  }

  @media screen and (max-width: 768px) {
    .w-section {
      width: 100%;
    }

    .BtnResume_button__8oUuT {
      padding: 0.5rem 1rem;
    }
  }

  .BtnResume_button__8oUuT {
    --border-width: 0.125rem;
    --noise-image: url(https://assets.codepen.io/32996/noise-250x250.png);
    border-radius: 1.5rem 0.75rem;
    padding: 0.65rem 1rem;
    white-space: nowrap;
    position: relative;
    overflow: hidden;
    outline-offset: -0.25rem;
    transform: rotate(-3deg);
    transition:
      scale 0.25s ease-in-out,
      -webkit-clip-path 0.25s ease-out;
    transition:
      scale 0.25s ease-in-out,
      clip-path 0.25s ease-out;
    transition:
      scale 0.25s ease-in-out,
      clip-path 0.25s ease-out,
      -webkit-clip-path 0.25s ease-out;
    text-transform: uppercase;
    animation: BtnResume_rotate-hue__ghMdP 10s linear infinite;
    color: #fff;
    display: block;
    align-self: center;
    background-image: var(--noise-image),
      radial-gradient(circle, rgba(0, 0, 0, 0.5) 100%, transparent 0),
      linear-gradient(15deg, blue, #fff), linear-gradient(30deg, orange, #fff),
      linear-gradient(45deg, lime, #fff), linear-gradient(60deg, lime, #fff),
      linear-gradient(75deg, cyan, #fff), linear-gradient(90deg, blue, #fff),
      linear-gradient(105deg, lime, #fff), linear-gradient(120deg, #000, #fff),
      linear-gradient(135deg, #fff, #fff), linear-gradient(150deg, #fff, #000),
      linear-gradient(165deg, #fff, #fff), linear-gradient(180deg, #000, #fff),
      linear-gradient(205deg, #fff, #000), linear-gradient(220deg, lime, #fff),
      linear-gradient(235deg, #fff, #fff), linear-gradient(250deg, #000, #fff),
      linear-gradient(265deg, #fff, #fff),
      linear-gradient(280deg, #fff, #fff5ee),
      linear-gradient(295deg, #fff, #fff), linear-gradient(315deg, #fff, #fff),
      linear-gradient(330deg, #fff, #fff), linear-gradient(345deg, #fff, #fff),
      linear-gradient(1turn, #fff, #fff);
    background-blend-mode: multiply, multiply, difference, overlay, difference,
      difference, difference, difference, difference, difference, exclusion,
      difference, multiply, difference, difference, difference, difference,
      difference, difference, difference, difference, difference, difference,
      difference, difference, exclusion;
    background-size:
      120px 0,
      100% 100%;
    -webkit-clip-path: polygon(
      0 0,
      calc(100% - 1.1875rem) 0,
      calc(100% - 0.6732974165rem) -2.25rem,
      calc(100% + 0.6979094728rem) calc(100% - 0.296875rem),
      calc(100% + 0.1837068893rem) 100%,
      0 150%
    );
    clip-path: polygon(
      0 0,
      calc(100% - 1.1875rem) 0,
      calc(100% - 0.6732974165rem) -2.25rem,
      calc(100% + 0.6979094728rem) calc(100% - 0.296875rem),
      calc(100% + 0.1837068893rem) 100%,
      0 150%
    );
  }

  .BtnResume_button__8oUuT:hover {
    -webkit-clip-path: polygon(
      0 0,
      calc(100% - 1.1875rem) 0,
      calc(100% - 1.1875rem) 0,
      calc(100% + 0.65rem) 100%,
      calc(100% + 0.1837068893rem) 100%,
      0 150%
    );
    clip-path: polygon(
      0 0,
      calc(100% - 1.1875rem) 0,
      calc(100% - 1.1875rem) 0,
      calc(100% + 0.65rem) 100%,
      calc(100% + 0.1837068893rem) 100%,
      0 150%
    );
    scale: 1.025;
  }

  .BtnResume_button__8oUuT:hover:active {
    scale: 0.975;
  }

  .BtnResume_button__8oUuT:hover:after {
    transform: rotate(-30deg) translateX(1.1875rem);
  }

  .BtnResume_button__8oUuT:after {
    content: "";
    position: absolute;
    display: block;
    border-radius: 50rem;
    background-color: hsla(0, 0%, 100%, 0.5);
    transition: transform 0.25s ease-out;
    height: 2.375rem;
    width: calc(2.375rem);
    top: -1px;
    right: -1px;
    transform: rotate(-30deg) translateX(2.5rem);
    outline-offset: -0.25rem;
  }
  @media (prefers-reduced-motion: reduce) {
    .BtnResume_button__8oUuT {
      animation: none;
    }
  }
  @keyframes BtnResume_rotate-hue__ghMdP {
    0% {
      filter: hue-rotate(0deg);
    }
    to {
      filter: hue-rotate(1turn);
    }
  }
</style>
