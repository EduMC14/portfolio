---

import ExperiencieDes from "../components/ExperiencieDescription.astro"

const {title, date, description, enterprise} = Astro.props

---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-yellow-400"></div>
<div class="flex">
    <div class="w-[40%]">
            <h3 class="text-md lg:text-xl font-bold  dark:text-yellow-400">{title}</h3>
            <h4 class="text-base lg:text-lg font-semibold dark:text-gray-200">{enterprise}</h4>
            <time class="mt-1 text-sm lg:text-md font-normal leading-none text-gray-400 dark:text-gray-300">{date}</time>
            
    </div>
    <ExperiencieDes {description} />
</div>