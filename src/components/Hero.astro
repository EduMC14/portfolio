<style>
	

	.btn_projects{
		border-radius:1.5rem .75rem;
	}

	.btn_contact{
		border-radius:.75rem 1.5rem;
	}

    .name-wave{
		position: absolute;
		/* left: 19.5rem; */
	}

	.wave-bor{
		text-shadow: 
		-1px -1px 0 black,
		1px -1px 0 black,
		1px 1px 0 black,
		-1px 1px 0 black
		;
	}

	.wave{
		color: #09f;
		animation: wave 2s ease-in-out 3s infinite;
	}

    .fade-up-wave{
        color: #09f;
        animation: fade-up 1s both, wave 2s ease-in-out infinite;
    }
	
	@keyframes wave{
		0%, 100% {
			clip-path: polygon(
				0% 47%,
				10% 48%,
				33% 54%,
				54% 60%,
				70% 61%,
				84% 59%,
				100% 52%,
				100% 100%,
				0% 100%
			);
		}
		50% {
			clip-path: polygon(
				0% 65%,
				15% 65%,
				34% 66%,
				51% 62%,
				67% 58%,
				84% 45%,
				100% 46%,
				100% 100%,
				0% 100%
			);
		}
	}

@keyframes fade-up {
    0% {
        opacity: 0;
        transform: translateY(2rem)
    }

    to {
        opacity: 1;
        transform: translateY(0)
    }
}

.animate-fade-up {
    animation: fade-up 1s both
}


	@media screen and (max-width:768px) {
		.box-relative{
		width: 18.5rem;
	}
}
</style>